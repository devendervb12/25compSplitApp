<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="smax.batch25.split.controller.ProductList"	
		
		 xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	         <List items="{/ProductSet}" id="idList">
	           <items>
		              <StandardListItem title="{ProductID}" 
		              description="{Name}" type="Active"
		              press="onItemPress"
		              />
	           </items>
	         </List>
		</content>
	</Page>
</core:View>